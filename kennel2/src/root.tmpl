      <div id="wandbox-editor-content" class="tab-content">
        <div
          id="wandbox-editor-default"
          role="tabpanel"
          class="tab-pane active"
        >
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2" id="editor-settings">
    <label>choose key binding:</label>
