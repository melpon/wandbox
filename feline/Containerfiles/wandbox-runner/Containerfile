FROM docker.io/library/ubuntu:24.04

RUN apt-get update \
  && apt-get install -y \
    libonig-dev \
    libonig5 \
    libz3-4 \
    silversearcher-ag \
    libgmp-dev \
    nginx \
    cmake \
    libgfortran5 \
    libgcc-14-dev \
    libtinfo6 \
    libsqlite3-0 \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*

RUN groupadd -r wandbox && useradd -r -g wandbox -m wandbox
USER wandbox
